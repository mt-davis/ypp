<p id="notice"><%= notice %></p>

<h1>Listing Cigarettes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cigarettes.each do |cigarette| %>
      <tr>
        <td><%= cigarette.name %></td>
        <td><%= link_to 'Show', cigarette %></td>
        <td><%= link_to 'Edit', edit_cigarette_path(cigarette) %></td>
        <td><%= link_to 'Destroy', cigarette, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cigarette', new_cigarette_path %>
