<p id="notice"><%= notice %></p>

<h1>Listing Refas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @refas.each do |refa| %>
      <tr>
        <td><%= refa.name %></td>
        <td><%= link_to 'Show', refa %></td>
        <td><%= link_to 'Edit', edit_refa_path(refa) %></td>
        <td><%= link_to 'Destroy', refa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

