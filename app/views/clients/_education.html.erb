<div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#education" aria-controls="education" role="tab" data-toggle="tab">Education</a>
        </li>
        <li role="presentation"><a href="#employment" aria-controls="employment" role="tab" data-toggle="tab">Employment</a>
        </li>
        <li role="presentation"><a href="#reproductiveHealth" aria-controls="messages" role="tab" data-toggle="tab">Reproductive Health</a>
        </li>
        <li role="presentation"><a href="#mentalhealth" aria-controls="settings" role="tab" data-toggle="tab">Mental Health</a>
        </li>
        <li role="presentation"><a href="#parents" aria-controls="settings" role="tab" data-toggle="tab">Parents</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="education">
            <fieldset>

                <div class="pure-form pure-form-stacked">
                    <div class="pure-u-1 pure-u-md-2-5">
                        <label for="school">
                            <%=f .label :ed_id, "School" %>
                        </label>
                        <%=f .collection_select :ed_id, Ed.all, :id, :school, {prompt: "Choose School"}, class: "btn btn-info", class: "pure-u-23-24" %>
                    </div>

                    <div class="pure-u-1 pure-u-md-2-5">
                        <label for="grade">
                            <%=f .label :grade_id, "Grade" %>
                        </label>
                        <%=f .collection_select :grade_id, Grade.all, :id, :number, {prompt: "Choose Grade"}, class: "btn btn-info", class: "pure-u-23-24" %>
                    </div>

                    <div class="pure-u-1 pure-u-md-2-5">
                        <label for="grad">Graduated Date</label>
                          <div class="pure-u-1 pure-u-md-1-3 dob">
                                <label for="grad"></label>
                                <%= f.date_field :grad, class:"fa fa-calendar" %>
                            </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div role="tabpanel" class="tab-pane" id="employment">
            <label for="grade">
                <%=f .label :employment_id, "Employment" %>
            </label>
            <%=f .collection_select :employment_id, Employment.all, :id, :name, {prompt: "Employment Status"}, class: "btn btn-info", class: "pure-input-24-24" %>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="wk">
                        <%=f .label :wk_id, "Working Where?" %>
                    </label>
                    <%=f .text_area :wk_id, cols: "20", rows: "1" %>
                </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="reproductiveHealth">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="pure-form pure-form-aligned">
                            <%=f .collection_check_boxes :rhealth_ids, Rhealth.all, :id, :name do |b| %>
                                <div class="pure-control-group">
                                    <%=b.check_box class: "rh-input" %>
                                        <%=b.label %>
                                </div>
                                <% end %>
                        </div>
                        <!-- End of grid -->

                    </div>
                    <!-- End of reproductiveHealth -->

                    <div class="col-md-6">
                        <!-- secnod row -->
                      ...
                    </div>
                </div>
            </div>
            <!-- End of grid -->
        </div>
        <!-- End of reproductiveHealth -->

        <div role="tabpanel" class="tab-pane" id="mentalhealth">
            <h3 class="mentalhealth">Withnessed or been a victim of any of the folllowing?</h3>
             <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="pure-form pure-form-aligned">
                            <%=f .collection_check_boxes :mhealth_ids, Mhealth.all, :id, :name do |b| %>
                                <div class="pure-control-group">
                                    <%=b.check_box class: "rh-input" %>
                                        <%=b.label %>
                                </div>
                                <% end %>
                        </div>
                        <!-- End of grid -->

                    </div>
                    <!-- End of mentalhealth -->

                    <div class="col-md-6">
                        <!-- secnod row -->
                        <p>If withness to truma, what kind?</p>
                        <label for="truma">
                    </label>
                    <%=f .text_area :truma_id, cols: "20", rows: "1" %>
                    </div>
                </div>
            </div>
            <!-- End of grid -->
        </div>
        <!-- End of Mental Health -->
        <div role="tabpanel" class="tab-pane" id="parents">
            <h3 class="parents">Current Status of Parents?</h3>
             <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="pure-form pure-form-aligned">
                            <%=f.collection_check_boxes :cparent_ids, Cparent.all, :id, :name do |b| %>
                                <div class="pure-control-group">
                                    <%=b.check_box class: "rh-input" %>
                                        <%=b.label %>
                                </div>
                                <% end %>
                        </div>
                        <!-- End of grid -->

                    </div>
                    <!-- End of mentalhealth -->

                    <div class="col-md-6">
                        <!-- secnod row -->
                        ...
                    </div>
                </div>
            </div>
            <!-- End of grid -->
        </div>
    </div>

</div>