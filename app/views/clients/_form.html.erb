<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="row">
  <div class="col-md-4">
    <div class="clienthead text-muted">
      <h2>Client Name</h2>
    </div>
    <div class="clientname">
    <%= f.label:firstName, class: "hidden" %><br>
    <%= f.text_field :firstName, class: "form-control", placeholder: "First Name"  %>
  </div>
  <div class="clientname">
    <%= f.label :lastName, class: "hidden" %><br>
    <%= f.text_field :lastName, class: "form-control", placeholder: "LastName" %>
    </div>
    <div class="form-group">
    <%= f.label :gender_id, class: "hidden" %><br>
    <%= f.collection_select :gender_id, Gender.all, :id, :gender, {prompt: "Choose a Gender"}, class: "btn btn-info" %>
  </div>
  <div class="form-group">
  <div class="clientdob">
    <%= f.label :dob, "Date of Birth" %><br>
    <%= f.date_field :dob, class: "form-control", class: "glyphicon glyphicon-calendar" %>
  </div>
  <div class="form-group">
    <div class="clientemail">
    <%= f.label :email, class: "hidden" %><br>
    <%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
  </div>
  </div>
  <div class="form-group">
    <div class="clientphone">
    <%= f.label :phone, class: "hidden" %>
    <%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
  </div>
  </div>
  </div>
    </div>
  <div class="col-md-4">
    <div class="clienthead text-muted">
      <h2>Client Address</h2>
    </div>
    <div class="clientaddress">
    <%= f.label :address, class: "hidden" %><br>
    <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
  </div>
  <div class="clientcity">
    <%= f.label :city, class: "hidden" %><br>
    <%= f.text_field :city, class: "form-control", placeholder: "City" %>
  </div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="clientzip">
    <%= f.label :zipcode, class: "hidden" %>
    <%= f.text_field :zipcode, class: "form-control", placeholder: "Zipcode" %>
  </div>
    </div>
  <div class="col-md-4">
    .col-md-4
    </div>
</div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', clients_path, class: "btn btn-danger" %>
  </div>
<% end %>